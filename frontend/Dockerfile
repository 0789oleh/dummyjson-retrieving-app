# frontend/Dockerfile — ЗАМЕНИ СВОЙ НА ЭТОТ!
FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Продакшн-стадия
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html

# ← ВОТ ЭТО ГЛАВНОЕ — SPA fallback!
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]